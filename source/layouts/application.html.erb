<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge, chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title><%= current_page.data.title || "Web en Vert" %></title>

    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag  "application" %>
    <script src="https://use.typekit.net/jre2tgz.js"></script>
    <script>try{Typekit.load({ async: true });}catch(e){}</script>
  </head>

  <body class="<%= page_classes %>">
    <div class="container">
      <% link_to '/' do %>
        <h3 class="logo">Web en Vert<span class="blinking-cursor">_</span></h3>
      <% end %>
      <div class="social-links">
        <% link_to 'http://twitter.com/webenvert', class: 'social-link' do %>
          <%= image_tag 'twitter.png' %>
        <% end %>
        <% link_to 'http://webenvert-slack-invite.herokuapp.com', class: 'social-link' do %>
          <%= image_tag 'slack.png' %>
        <% end %>
        <% link_to 'http://tinyletter.com/webenvert', class: 'social-link' do %>
          <%= image_tag 'tinyletter.png' %>
        <% end %>
        <% link_to 'https://github.com/webenvert', class: 'social-link' do %>
          <%= image_tag 'github.png' %>
        <% end %>
      </div>
    </div>

    <%= yield %>
  </body>
</html>
